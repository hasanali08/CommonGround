<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="451.0" prefWidth="750.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BookingViewController">
   <content>
      <VBox fx:id="bookingView" spacing="15">
         <children>
            <!-- Section for Ongoing Bookings -->
            <Pane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #3c791b;">
               <children>
                  <Label layoutX="10.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Ongoing Bookings" textFill="WHITE" />
               </children>
            </Pane>
            <VBox fx:id="ongoingBookingsBox" spacing="10" />
            
            <!-- Section for Past Bookings -->
            <Pane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #3c791b;">
               <children>
                  <Label layoutX="10.0" layoutY="10.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Past Bookings" textFill="WHITE" />
               </children>
            </Pane>
            <VBox fx:id="pastBookingsBox" spacing="10" />
         </children>
      </VBox>
   </content>
</ScrollPane>
