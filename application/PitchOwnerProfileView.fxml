<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="436.0" prefWidth="753.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProfileViewController">
   <children>
      <VBox alignment="CENTER" prefHeight="436.0" prefWidth="737.0" spacing="15.0" style="-fx-background-color: #f7f7f7; -fx-padding: 20;">
         
         <children>
            
            <!-- User's Name -->
            <Label fx:id="userNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="User Name" />
      
            <!-- Additional User Information -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <!-- Email -->
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Email:" />
                  <Label fx:id="userEmailLabel" style="-fx-font-size: 14px;" text="user@example.com" />
      
                  <!-- Phone Number -->
                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Phone Number:" />
                  <Label fx:id="userPhoneLabel" style="-fx-font-size: 14px;" text="+123 456 7890" />
                  <Label fx:id="skillTagsLabel" style="-fx-font-size: 14px;">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
               </children>
            </VBox>
      
            <!-- Logout Button -->
            <Button fx:id="logoutButton" style="-fx-font-size: 14px; -fx-background-color: #3c791b; -fx-text-fill: white; -fx-padding: 10px 20px;" text="Logout" />
         </children>
      </VBox>
   </children>
</Pane>
